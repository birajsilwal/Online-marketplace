<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Lobotask.LobotaskMain">

    <RelativeLayout
        android:id="@+id/rlwithbackandlobotask"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivBackLobotask"
            android:layout_width="45dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:src="@mipmap/ic_back_foreground" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/authenia"
            android:text="Lobotask"
            android:textColor="@color/pureBlack"
            android:textSize="36sp" />

        <View
            android:id="@+id/viewLinePost"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="50dp"
            android:background="@color/black_20_transparent"
            android:elevation="1dp"/>
    </RelativeLayout>

    <GridLayout
        android:id="@+id/rlwithbuttonslobotaks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="1"
        android:layout_marginTop="100dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Space
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1" />
            <Button
                android:id="@+id/btnNewTask"
                android:layout_width="175dp"
                android:layout_height="175dp"
                android:background="@drawable/custom_button_lobotask1"
                android:fontFamily="@font/futura"
                android:text="To Do"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="35sp" />
            <Space
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <Button
                android:id="@+id/btnNewGroupProject"
                android:layout_width="175dp"
                android:layout_height="175dp"
                android:text="Project"
                android:textAllCaps="false"
                android:textSize="35sp"
                android:fontFamily="@font/futura"
                android:textColor="@color/white"
                android:background="@drawable/custom_button_lobotask2"/>

            <Space
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Space
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1" />
            <Button
                android:id="@+id/btnAddCustomList"
                android:layout_width="175dp"
                android:layout_height="175dp"
                android:text="Add Custom List"
                android:textAllCaps="false"
                android:textSize="30sp"
                android:fontFamily="@font/futura"
                android:textColor="@color/white"
                android:background="@drawable/custom_button_lobotask3"/>
            <Space
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="9" />

        </LinearLayout>


    </GridLayout>

</RelativeLayout>