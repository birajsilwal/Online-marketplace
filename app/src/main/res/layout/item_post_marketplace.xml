<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rlMarketplace"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ivImageMp"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="1dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        android:scaleType="centerCrop"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tvTitleMp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="5dp"
        android:layout_toEndOf="@+id/ivImageMp"
        android:text="Title"
        android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Title" />

    <RelativeLayout
        android:id="@+id/rlwithprice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_below="@+id/tvTitleMp"
        android:layout_toRightOf="@+id/ivImageMp">

        <TextView
            android:id="@+id/etPriceMp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="1dp"
            android:background="@android:color/transparent"
            android:layout_toRightOf="@id/tvDollarSign"
            android:layout_centerVertical="true"
            android:textColor="@color/black_95_transparent"
            android:textSize="19sp"
            android:text="115" />

        <TextView
            android:id="@+id/tvDollarSign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="2dp"
            android:text="$"
            android:textSize="20sp"
            android:textColor="@color/black_95_transparent"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/textViewClickhereformore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_alignBottom="@+id/ivImageMp"
        android:layout_toRightOf="@id/ivImageMp"
        android:text="Click here for more description."
        android:textSize="10sp" />

    <RelativeLayout
        android:id="@+id/rlwithViewinpostmarketplace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivImageMp">

        <View
            android:id="@+id/viewLinePostMarketplace"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/loboGray"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            />

    </RelativeLayout>





</RelativeLayout>