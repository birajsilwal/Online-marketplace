<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuActivity.MenuActivityHomescreen">

    <RelativeLayout
        android:id="@+id/rlwithbackandmenuhomescreen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/ivBackMenuHomescreen"
            android:layout_width="30dp"
            android:layout_height="25dp"
            android:layout_marginTop="15dp"
            android:layout_marginStart="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:src="@mipmap/ic_back_foreground" />

        <TextView
            android:id="@+id/tvHomescreenmenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/ivBackMenuHomescreen"
            android:text="Menu Homescreen"
            android:fontFamily="@font/futura"
            android:textColor="@color/black_95_transparent"
            android:textSize="19sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlwithHomeinmenuhomescreen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/rlwithbackandmenuhomescreen">
        <ImageView
            android:id="@+id/ivHome"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="28dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_home_foreground" />
        <Button
            android:id="@+id/btnHome"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="start"
            android:layout_centerVertical="true"
            android:paddingStart="85dp"
            android:text="Home"
            android:textAllCaps="false"
            android:fontFamily="@font/futura_medium"
            android:textSize="27sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlwithPublicprofileinmenuhomescreen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rlwithHomeinmenuhomescreen">
        <ImageView
            android:id="@+id/ivPublicProfileML"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="28dp"
            android:layout_marginTop="6dp"
            android:src="@mipmap/ic_profile_foreground" />
        <Button
            android:id="@+id/btnPublicProfile"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="start"
            android:layout_centerVertical="true"
            android:paddingStart="85dp"
            android:text="Public Profile"
            android:textAllCaps="false"
            android:fontFamily="@font/futura_medium"
            android:textSize="27sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlwithBookmarksinmenuhomescreen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rlwithPublicprofileinmenuhomescreen">
        <ImageView
            android:id="@+id/ivBookmark"
            android:layout_width="33dp"
            android:layout_height="32dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="31dp"
            android:layout_marginTop="10dp"
            android:src="@mipmap/ic_bookmark_foreground" />
        <Button
            android:id="@+id/btnBookmark"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="start"
            android:layout_centerVertical="true"
            android:paddingStart="85dp"
            android:text="Bookmarks"
            android:textAllCaps="false"
            android:fontFamily="@font/futura_medium"
            android:textSize="27sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlwithSettingandprivacyinmenuhomescreen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rlwithBookmarksinmenuhomescreen">
        <ImageView
            android:id="@+id/ivSetting"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="31dp"
            android:layout_marginTop="9dp"
            android:src="@mipmap/ic_setting_foreground" />
        <Button
            android:id="@+id/btnSetting"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="start"
            android:layout_centerVertical="true"
            android:paddingStart="85dp"
            android:text="Settings &amp; Privacy"
            android:textAllCaps="false"
            android:fontFamily="@font/futura_medium"
            android:textSize="27sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlwithLogoutinmenuhomescreen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rlwithSettingandprivacyinmenuhomescreen">
        <ImageView
            android:id="@+id/ivLogout"
            android:layout_width="30dp"
            android:layout_height="33dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="33dp"
            android:layout_marginTop="9dp"
            android:src="@mipmap/ic_logout_foreground" />
        <Button
            android:id="@+id/btnLogOut"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="start"
            android:layout_centerVertical="true"
            android:paddingStart="85dp"
            android:text="Log Out"
            android:textAllCaps="false"
            android:fontFamily="@font/futura_medium"
            android:textSize="27sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:padding="4dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@color/grey_1">

        <TextView
            android:id="@+id/tvVersion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tvMadeinabq"
            android:layout_centerHorizontal="true"
            android:text="myLobo v1"
            android:fontFamily="@font/futura"
            android:textColor="@color/black_95_transparent" />

        <TextView
            android:id="@+id/tvMadeinabq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="Made in Albuquerque"
            android:fontFamily="@font/futura"
            android:textColor="@color/black_95_transparent" />
    </RelativeLayout>
</RelativeLayout>