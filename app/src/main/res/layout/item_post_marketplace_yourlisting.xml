<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="10dp"
    android:background="@drawable/custom_border_image_yourlistings"
    android:id="@+id/rlMarketplaceYourlistings">

    <androidx.cardview.widget.CardView
        android:id="@+id/ivImageMpYourlistingsCardView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp">
        <ImageView
            android:id="@+id/ivImageMpYourlistings"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:scaleType="centerCrop"
            android:background="@drawable/custom_border_image_yourlistings"
            tools:srcCompat="@tools:sample/avatars" />
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/tvTitleMpYourlistings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="5dp"
        android:layout_toEndOf="@+id/ivImageMpYourlistingsCardView"
        android:text="Title"
        android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Title" />

    <RelativeLayout
        android:id="@+id/rlwithpriceYourlistings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/tvTitleMpYourlistings"
        android:layout_toRightOf="@+id/ivImageMpYourlistingsCardView">

        <TextView
            android:id="@+id/etPriceMpYourlistings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:background="@android:color/transparent"
            android:layout_toRightOf="@id/tvDollarSign"
            android:layout_centerVertical="true"
            android:text="115"
            android:textColor="@color/black_95_transparent"/>

        <TextView
            android:id="@+id/tvDollarSign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"
            android:text="$"
            android:textColor="@color/black_95_transparent"/>
    </RelativeLayout>

    <ImageView
        android:id="@+id/ivMoreYourlistings"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginEnd="8dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        app:srcCompat="@mipmap/ic_vertical_menu_foreground" />

<!--    <TextView-->
<!--        android:id="@+id/tvEmptystateItemMP"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:text="yo"-->
<!--        android:textSize="30dp"-->
<!--        android:layout_below="@+id/rlwithpriceYourlistings"-->
<!--        android:gravity="center"/>-->

</RelativeLayout>