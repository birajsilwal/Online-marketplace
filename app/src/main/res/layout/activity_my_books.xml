<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".myBooks.myBooks">
    <RelativeLayout
        android:id="@+id/rlwithbackandmybooks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/ivBackmyBooks"
            android:layout_width="30dp"
            android:layout_height="25dp"
            android:layout_marginTop="15dp"
            android:layout_marginStart="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:src="@mipmap/ic_back_foreground" />
        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:fontFamily="@font/authenia"
            android:text=" myBooks "
            android:textColor="@color/pureBlack"
            android:textSize="36sp" />
        <ImageView
            android:id="@+id/ivMenumyBooks"
            android:layout_width="35dp"
            android:layout_height="25dp"
            android:layout_marginEnd="9dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:src="@mipmap/ic_menu_foreground"/>
        <View
            android:id="@+id/viewLinemyBooks"
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:elevation="5dp"
            android:background="@color/loboSilver"
            android:layout_marginTop="50dp"/>
    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="planned for the future. Thank you"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"/>
</RelativeLayout>