<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rlMarketplace"
    android:layout_marginStart="0dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:paddingStart="2dp"
    android:paddingEnd="2dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/ivImageMp"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:scaleType="centerCrop"
            android:layout_marginTop="1dp"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/tvItemNamePMarketplace"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="UNO"
            android:layout_marginStart="2dp"
            android:textSize="20sp"
            android:textColor="@color/black_95_transparent"
            android:layout_below="@+id/ivImageMp"/>

        <RelativeLayout
            android:id="@+id/rlwithprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_below="@+id/tvItemNamePMarketplace">

                <TextView
                    android:id="@+id/etPriceMp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:background="@android:color/transparent"
                    android:layout_toRightOf="@id/tvDollarSign"
                    android:layout_centerVertical="true"
                    android:textColor="@color/black_95_transparent"
                    android:textSize="20sp"
                    android:text="115" />

                <TextView
                    android:id="@+id/tvDollarSign"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="15dp"
                    android:text="$"
                    android:textSize="20sp"
                    android:textColor="@color/black_95_transparent"/>
        </RelativeLayout>

</RelativeLayout>