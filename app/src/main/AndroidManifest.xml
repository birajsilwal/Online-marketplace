<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.mylobo">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".ParseApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MaterialComponents.Light.NoActionBar"
        android:usesCleartextTraffic="true"
        tools:ignore="GoogleAppIndexingWarning"
        tools:targetApi="m">
        <activity android:name=".Lobotask.Todo.Todo"></activity>
        <activity android:name=".BookmarksActivity" />
        <activity android:name=".Marketplace.YourListingsActivity" />
        <activity android:name=".Flashcard.FlashcardMain" />
        <activity android:name=".Flashcard.AddCardActivity" />
        <activity
            android:name=".TestingPurpose"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity
            android:name=".MenuActivity.MenuActivityLobotask"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity
            android:name=".Lobotask.LobotaskMain"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity
            android:name=".MenuActivity.MenuActivityHomescreen"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity android:name=".PublicProfileActivity" />
        <activity android:name=".MenuActivity.MenuActivitySettingPrivacy" />
        <activity android:name=".myLobos.DetailActivity" /> <!-- make sure within the application tag, otherwise app will crash with XmlResourceParser errors -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.codepath.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/fileprovider" />
        </provider>

        <activity
            android:name=".LoginActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Marketplace.Marketplace" />
        <activity android:name=".myLobos.MainActivity" />
        <activity android:name=".myBooks.myBooks" />
        <activity
            android:name=".HomeScreen"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity
            android:name=".MenuActivity.MenuActivityMarketplace"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity android:name=".fragmentsMarketplace.ComposeFragmentMarketplace" />
        <activity android:name=".LogoutActivity" />
        <activity
            android:name=".SignupActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity
            android:name=".MenuActivity.MenuActivitymyLobos"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity android:name=".Marketplace.DetailPostMarketplace" />
        <activity android:name=".Lobochat.ChatActivity" />
        <activity android:name=".Marketplace.PostsAdapterMarketplaceYourlistings" />
        <activity android:name=".Bookmarks" />
        <activity android:name=".Lobotask.Todo.TodoItemAdapter" />
        <activity android:name=".Lobotask.Todo.TodoItem" />
    </application>

</manifest>