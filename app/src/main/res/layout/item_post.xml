<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rlPost"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rlitemPost">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="6dp"
            android:src="@drawable/biraj"
            app:civ_border_color="#63666A"
            app:civ_border_width="2dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvHandle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="13dp"
            android:layout_toEndOf="@+id/profile_image"
            android:text="Biraj"
            android:textAppearance="@style/TextAppearance.AppCompat.SearchResult.Title" />

        <ImageView
            android:id="@+id/ivDelete"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="15dp"
            android:src="@mipmap/ic_delete_foreground"
            />

    </RelativeLayout>

    <com.zolad.zoominimageview.ZoomInImageView
        android:id="@+id/ivImage"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:layout_below="@id/rlitemPost"
        android:layout_marginTop="10dp"
        android:scaleType="centerCrop"
        tools:srcCompat="@drawable/biraj" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_below="@+id/ivImage"
        android:layout_alignParentStart="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="8dp"
        app:srcCompat="@mipmap/ic_comment1_foreground" />

    <ImageView
        android:id="@+id/ivAddtofavorite"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_below="@+id/ivImage"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="193dp"
        app:srcCompat="@mipmap/ic_bookmark_foreground" />

    <ImageView
        android:id="@+id/ivReport"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_below="@+id/ivImage"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        app:srcCompat="@mipmap/ic_report_foreground" />

    <TextView
        android:id="@+id/tvDescriptionTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:textSize="14sp"
        android:textColor="@color/black_95_transparent"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="10dp"
        tools:text="hipster attempt" />

    <View
        android:id="@+id/viewLineItemPost"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@color/loboGrey"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_below="@+id/tvDescriptionTitle"

        />




</RelativeLayout>